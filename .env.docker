# Docker Environment Configuration for Endoflow
# Copy this file to .env.local and update with your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database Configuration (for containers)
# This will be automatically set up by docker-compose
POSTGRES_URL=postgresql://endoflow_user:endoflow_password@postgres:5432/endoflow
DATABASE_URL=postgresql://endoflow_user:endoflow_password@postgres:5432/endoflow

# Authentication
AUTH_SECRET=your_auth_secret_here_minimum_32_characters

# Redis Configuration (optional)
REDIS_URL=redis://redis:6379

# Application Configuration
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Docker-specific configurations
DOCKER_POSTGRES_DB=endoflow
DOCKER_POSTGRES_USER=endoflow_user
DOCKER_POSTGRES_PASSWORD=endoflow_password